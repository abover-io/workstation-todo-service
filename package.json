{
  "name": "fancy-todo-api",
  "version": "2.0.0",
  "description": "Sunday's Fancy Todo API",
  "main": "app.js",
  "scripts": {
    "test": "jest --coverage --detectOpenHandles --forceExit && coveralls < coverage/lcov.info",
    "dev": "npm run watch",
    "watch": "node watch-shim.js && npm-run-all --parallel bundle:watch server:watch",
    "bundle:watch": "webpack --mode=development --watch --progress --colors",
    "server:watch": "nodemon \"./dist/main.js\" --watch \"./dist/*\"",
    "build": "webpack --mode=production --progress --colors",
    "start": "node ./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunday-project/fancy-todo-api.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "typescript"
  ],
  "author": "Adam Rafiandri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafiandria23/fancy-todo/issues"
  },
  "homepage": "https://github.com/rafiandria23/fancy-todo#readme",
  "dependencies": {
    "@babel/runtime": "^7.10.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6",
    "socket.io": "^2.3.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.36",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.6",
    "@types/socket.io": "^2.1.10",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@types/webpack": "^4.41.15",
    "babel-loader": "^8.1.0",
    "coveralls": "^3.0.11",
    "dotenv": "^8.2.0",
    "jest": "^25.2.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
