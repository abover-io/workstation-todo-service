    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@types/webpack": "^5.28.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "coveralls": "^3.0.11",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1.3",
