{
  "name": "fancy-todo-api",
  "version": "2.0.0",
  "description": "Sunday's Fancy Todo API",
  "main": "app.js",
  "scripts": {
    "start": "npm run prod",
    "server": "node ./dist/app.js",
    "transpile": "babel src -d dist -x .ts,.js,.json",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "watch:dev": "nodemon",
    "test": "jest --coverage --detectOpenHandles --forceExit && coveralls < coverage/lcov.info",
    "docker:dev": "git checkout dev && docker build -f Dockerfile.dev -t rafiandria23/fancy-todo-api:dev . && docker push rafiandria23/fancy-todo-api:dev && git push origin dev",
    "docker:latest": "git checkout master && git merge dev && docker build -f Dockerfile -t rafiandria23/fancy-todo-api:latest . && docker push rafiandria23/fancy-todo-api:latest && git push origin master && git checkout dev",
    "push": "npm-run-all docker:dev docker:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunday-project/fancy-todo-api.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "typescript"
  ],
  "author": "Adam Rafiandri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafiandria23/fancy-todo/issues"
  },
  "homepage": "https://github.com/rafiandria23/fancy-todo#readme",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "tslib": "^2.0.1",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.36",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.6",
    "@types/socket.io": "^2.1.10",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@types/webpack": "^4.41.15",
    "babel-plugin-module-resolver": "^4.0.0",
    "coveralls": "^3.0.11",
    "dotenv": "^8.2.0",
    "jest": "^25.2.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.9.3"
  }
}
