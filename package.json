{
  "name": "fancy-todo-api",
  "version": "1.0.0",
  "description": "Sunday's Fancy Todo API",
  "main": "server.js",
  "scripts": {
    "start": "npm run prod",
    "server": "node ./dist/server.js",
    "transpile": "babel src -d dist -x .ts,.js,.json",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "dev": "nodemon",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "test": "jest --coverage --detectOpenHandles --forceExit && coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sundayexplore/fancy-todo-api.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "typescript",
    "rest",
    "api",
    "todo",
    "todolist",
    "opensource"
  ],
  "author": "Adam Rafiandri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sundayexplore/fancy-todo/issues"
  },
  "homepage": "https://github.com/sundayexplore/fancy-todo#readme",
  "dependencies": {
    "@babel/runtime": "^7.13.17",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "google-auth-library": "^7.0.4",
    "helmet": "^4.4.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.0",
    "mongoose": "^5.12.5",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.2.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/csurf": "^1.11.1",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.6.3",
