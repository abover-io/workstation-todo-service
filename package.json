{
  "name": "fancy-todo-api",
  "version": "2.0.0",
  "description": "Sunday's Fancy Todo API",
  "main": "server.js",
  "scripts": {
    "start": "npm run prod",
    "server": "node ./dist/server.js",
    "transpile": "babel src -d dist -x .ts,.js,.json",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "dev": "nodemon",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "test": "jest --coverage --detectOpenHandles --forceExit && coveralls < coverage/lcov.info",
    "docker:build:dev": "docker build -f Dev.Dockerfile -t sundayx/fancy-todo-api:dev .",
    "docker:push:dev": "docker push sundayx/fancy-todo-api:dev",
    "docker:build:latest": "docker build -f Prod.Dockerfile -t sundayx/fancy-todo-api:latest .",
    "docker:push:latest": "docker push sundayx/fancy-todo-api:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sundayexplore/fancy-todo-api.git"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "typescript",
    "rest",
    "api",
    "todo",
    "todolist",
    "opensource"
  ],
  "author": "Adam Rafiandri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sundayexplore/fancy-todo/issues"
  },
  "homepage": "https://github.com/sundayexplore/fancy-todo#readme",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "google-auth-library": "^6.1.5",
    "helmet": "^4.4.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.0",
    "mongoose": "^5.11.13",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "socket.io": "^3.1.0",
    "tslib": "^2.1.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.36",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.14.22",
    "@types/redis": "^2.8.28",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.1.3",
    "@types/webpack": "^4.41.26",
    "babel-plugin-module-resolver": "^4.1.0",
    "coveralls": "^3.0.11",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "tsc-watch": "^4.2.3",
    "typescript": "^4.1.3"
  }
}
